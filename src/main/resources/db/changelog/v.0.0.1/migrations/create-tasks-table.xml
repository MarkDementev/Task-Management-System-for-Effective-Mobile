<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
            http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="create-tasks-table" author="MarkDementev">
        <createTable tableName="tasks">
            <column name="id" type="SERIAL">
                <constraints primaryKey="true"/>
            </column>
            <column name="title" type="varchar">
                <constraints nullable="false"/>
            </column>
            <column name="description" type="varchar">
                <constraints nullable="false"/>
            </column>
            <column name="taskStatus" type="varchar">
                <constraints nullable="false"/>
            </column>
            <column name="taskPriority" type="varchar">
                <constraints nullable="false"/>
            </column>
            <column name="author_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="executioner_id" type="BIGINT">
            </column>
            <column name="created_at" type="TIMESTAMP(3) WITH TIMEZONE">
            </column>
            <column name="updated_at" type="TIMESTAMP(3) WITH TIMEZONE">
            </column>
        </createTable>
    </changeSet>
</databaseChangeLog>